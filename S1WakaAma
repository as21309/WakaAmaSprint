import os
from tkinter import *
from tkinter import filedialog

# -------------------------------
# Basic constants for appearance
# -------------------------------
bg = "#FAFFFD"  # Background color for the window and widgets
heading_font = ("Yu Gothic UI", "22", "bold")  # Font for the main heading
heading_fg = "#315944"  # Color for the heading text
para_font = ("Yu Gothic UI Semibold", "12")  # Font for paragraph/labels/buttons
para_fg = "#284A29"  # Color for paragraph/label/button text

class Menu:
    """Main menu class for the Waka Ama Ranking Finder GUI."""
    def __init__(self):
        # Create the main frame for the menu
        self.frame = Frame(bg=bg)
        self.frame.grid(sticky="nsew")
        self.frame.rowconfigure(0, weight=1)
        self.frame.columnconfigure(0, weight=1)

        # Heading label at the top of the menu
        self.menu_heading = Label(
            self.frame,
            text="Waka Ama Ranking Finder",
            font=heading_font,
            bg=bg,
            fg=heading_fg
        )
        self.menu_heading.grid(row=0, pady=(30, 0))

        # Description label with instructions
        self.menu_desc = Label(
            self.frame,
            text="Welcome! Please select a folder to begin.",
            font=para_font,
            wrap=550,
            width=80,
            justify="left",
            bg=bg,
            pady=10,
            fg=para_fg
        )
        self.menu_desc.grid(row=1)

        # Initialize folder path variable
        self.folder_path = None

        # Button to open the folder selection dialog
        self.folder_button = Button(
            self.frame,
            text="Select Folder",
            font=para_font,
            bg="#FFE4BA",
            bd=0,
            fg=para_fg,
            command=self.select_folder
        )
        self.folder_button.grid(row=2, pady=20)

        # Label to display the selected folder or error message
        self.selected_label = Label(
            self.frame,
            text="",
            font=para_font,
            fg="red",
            bg=bg
        )
        self.selected_label.grid(row=3)

    def select_folder(self):
        """Open a dialog to select a folder and update the label."""
        folder = filedialog.askdirectory()
        if folder:
            self.folder_path = folder
            self.selected_label.config(text=f"Selected: {folder}", fg=para_fg)
        else:
            self.folder_path = None
            self.selected_label.config(text="No folder selected.", fg="red")

if __name__ == "__main__":
    # Create the main application window
    window = Tk()
    window.title("Waka Ama Ranking Finder")
    window.geometry("700x300")
    window.configure(bg=bg)
    window.columnconfigure(0, weight=1)
    window.rowconfigure(0, weight=1)

    # Instantiate the Menu class to display the menu
    Menu()

    # Start the Tkinter event loop
    window.mainloop()